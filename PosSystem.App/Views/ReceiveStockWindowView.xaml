<Window x:Class="PosSystem.App.Views.ReceiveStockWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PosSystem.App.Views"
        xmlns:viewmodels="clr-namespace:PosSystem.App.ViewModels"
        mc:Ignorable="d"
        Title="Receive Stock" Height="Auto" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="0,0,10,10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Height" Value="25"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Height" Value="25"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Receive New Stock" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Form -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Product Selection -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Product:"/>
            <ComboBox Grid.Row="0" Grid.Column="1" 
                      ItemsSource="{Binding AllProducts}"
                      DisplayMemberPath="NameWithStock"
                      SelectedItem="{Binding SelectedProduct}"/>

            <!-- Quantity -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Quantity:"/>
            <TextBox Grid.Row="1" Grid.Column="1" 
                     Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Unit Cost -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Unit Cost:"/>
            <TextBox Grid.Row="2" Grid.Column="1" 
                     Text="{Binding UnitCost, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Total Cost (Read-only) -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Total Cost:"/>
            <TextBox Grid.Row="3" Grid.Column="1" 
                     Text="{Binding TotalCost, StringFormat=C}" 
                     IsReadOnly="True" Background="LightGray"/>

            <!-- Supplier -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Supplier:"/>
            <TextBox Grid.Row="4" Grid.Column="1" 
                     Text="{Binding Supplier, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Batch Number (Optional) -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Batch Number:"/>
            <TextBox Grid.Row="5" Grid.Column="1" 
                     Text="{Binding BatchNumber, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- Notes (Optional) -->
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Notes:"/>
            <TextBox Grid.Row="6" Grid.Column="1" 
                     Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                     Height="60" AcceptsReturn="True" TextWrapping="Wrap"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Receive" Command="{Binding ReceiveStockCommand}" 
                    Background="Green" Foreground="White" FontWeight="Bold"/>
            <Button Content="Cancel" Command="{Binding CloseCommand}" 
                    Background="LightCoral"/>
        </StackPanel>
    </Grid>
</Window>