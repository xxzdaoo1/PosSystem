<UserControl x:Class="PosSystem.App.Views.SalesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Product Search & Selection -->
        <GroupBox Grid.Row="0" Grid.Column="0" Header="Product Selection" Margin="0,0,5,5">
            <StackPanel>
                <TextBox Text="{Binding SearchText}" Margin="0,0,0,5" Height="25"/>
                <ListBox ItemsSource="{Binding FilteredProducts}" 
                         SelectedItem="{Binding SelectedProduct}"
                         DisplayMemberPath="Name"
                         Height="200"/>
                <Button Content="Add to Cart" Command="{Binding AddToCartCommand}" 
                        Margin="0,5,0,0" Height="30"/>
            </StackPanel>
        </GroupBox>

        <!-- Shopping Cart -->
        <GroupBox Grid.Row="0" Grid.Column="1" Header="Shopping Cart" Margin="5,0,0,5">
            <DataGrid ItemsSource="{Binding CartItems}" AutoGenerateColumns="False" 
                      IsReadOnly="True" Height="250">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product" Binding="{Binding Product.Name}" Width="*"/>
                    <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="60"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding UnitPrice, StringFormat=C}" Width="80"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding TotalPrice, StringFormat=C}" Width="80"/>
                    <DataGridTemplateColumn Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Remove" Command="{Binding DataContext.RemoveFromCartCommand, 
                                        RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        Margin="2" Height="20"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Transaction Details -->
        <GroupBox Grid.Row="1" Grid.ColumnSpan="2" Header="Transaction Details" Margin="0,5,0,5">
            <StackPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="Subtotal: " FontWeight="Bold" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding Subtotal, StringFormat=C}"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="Tax: " FontWeight="Bold" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding TaxAmount, StringFormat=C}"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <TextBlock Text="Total: " FontWeight="Bold" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding TotalAmount, StringFormat=C}" FontSize="14" FontWeight="Bold"/>
                </WrapPanel>
            </StackPanel>
        </GroupBox>

        <!-- Payment & Actions -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
            <Button Content="Process Payment" Command="{Binding ProcessPaymentCommand}" 
                    Width="120" Height="35" Margin="0,0,10,0" FontWeight="Bold"/>
            <Button Content="Cancel Sale" Command="{Binding CancelSaleCommand}" 
                    Width="100" Height="35"/>
        </StackPanel>

        <!-- Sales History -->
        <GroupBox Grid.Row="3" Grid.ColumnSpan="2" Header="Recent Sales" Margin="0,5,0,0">
            <DataGrid ItemsSource="{Binding RecentSales}" AutoGenerateColumns="False" Height="150">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Sale ID" Binding="{Binding SaleID}" Width="80"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding SaleDate, StringFormat=yyyy-MM-dd HH:mm}" Width="120"/>
                    <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="150"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount, StringFormat=C}" Width="100"/>
                    <DataGridTextColumn Header="Payment Method" Binding="{Binding PaymentMethod}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</UserControl>